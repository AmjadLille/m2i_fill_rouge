<Window x:Class="ProjetFilRouge.Acceuil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetFilRouge"
        mc:Ignorable="d"
        Title="Acceuil" Height="400" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 20 20 0">
            <TextBlock x:Name="nomAdmin" Text="Nom admin" Margin="10">
            </TextBlock>
            <Button x:Name="Deconnexion" Content="Deconnexion" Click="deconnexion_Click" />
            
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="GestionContenu" Content="Gerer du contenu" Click="GestionContenu_Click" Margin="50 40" />
            <Button x:Name="GestionUtilisateur" Content="Gerer les utilisateurs" Click="GestionUtilisateur_Click" Margin="50 40 " />
        </StackPanel>
    </Grid>
</Window>
